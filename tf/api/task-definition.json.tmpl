[
  {
    "name"     : "${name}",
    "image"    : "${image}",
    "cpu"      : ${cpu},
    "memory"   : ${memory},
    "essential": true,
    "portMappings": [{
        "containerPort" : ${containerPort},
        "Protocol"      :  "${protocol}"
    }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group"         : "payment-api-dev-cloudwatch-log-group",
        "awslogs-region"        : "${awsRegion}",
        "awslogs-stream-prefix" : "payment-apis"
      }
    },
    "environment": [
      { "name" : "DB_USER", "value" : "api" },
      { "name" : "DB_PASS", "value" : "test123456" },
      { "name" : "DB_NAME", "value" : "payments" },
      { "name" : "DB_HOST", "value" : "payments.culfnfuxbney.eu-west-1.rds.amazonaws.com" },
      { "name" : "DB_PORT", "value" : "5432" }
    ]
  }
]
